<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kissafaktoja.FavouritesPage"
             Title="FavouritesPage">
    <VerticalStackLayout>
        <Label 
            x:Name="FavLabel"
            Text=""
            FontAttributes="Bold"
            FontFamily="Roboto"
            FontSize="16"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button
        x:Name="GoBackBtn"
        Text="To Mainpage"
        Clicked="GoBackBtn_Clicked"
        />

        <Button
            x:Name="ClearBtn"
            Text="Clear Favourites"
            Clicked="ClearBtn_Clicked"
            />

    </VerticalStackLayout>
</ContentPage>